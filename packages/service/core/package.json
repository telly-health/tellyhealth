{
	"name": "core-api",
	"version": "1.0.0",
	"private": true,
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"author": "Ajain Vivek <ajainvivek07@gmail.com>",
	"files": [
		"dist/"
	],
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		},
		"./handler": {
			"import": "./dist/esm/handler.js",
			"require": "./dist/cjs/handler.js"
		}
	},
	"license": "MIT",
	"dependencies": {
		"@koa/cors": "^3.1.0",
		"@koa/router": "^10.0.0",
		"@sendgrid/mail": "^7.4.2",
		"@types/convict-format-with-validator": "^6.0.2",
		"axios": "^0.21.1",
		"convict": "^6.0.1",
		"convict-format-with-validator": "^6.0.1",
		"dotenv": "^8.2.0",
		"firebase-admin": "^9.7.0",
		"ioredis": "^4.27.1",
		"koa": "^2.13.1",
		"koa-bodyparser": "^4.3.0",
		"koa-helmet": "^6.1.0",
		"mongoose": "^5.12.7",
		"ms": "^2.1.3",
		"pino": "^6.11.3",
		"qs": "^6.10.1",
		"serverless-http": "^2.7.0",
		"twilio": "^3.61.0"
	},
	"devDependencies": {
		"@firebase/rules-unit-testing": "^1.3.1",
		"@jest/globals": "^26.6.2",
		"@types/convict": "^5.2.2",
		"@types/ioredis": "^4.26.1",
		"@types/jest": "^26.0.23",
		"@types/koa": "^2.13.1",
		"@types/koa-bodyparser": "^4.3.0",
		"@types/koa-helmet": "^6.0.2",
		"@types/koa__cors": "^3.0.2",
		"@types/koa__router": "^8.0.4",
		"@types/mongoose": "^5.10.5",
		"@types/ms": "^0.7.31",
		"@types/node": "^15.0.3",
		"@types/qs": "^6.9.6",
		"@types/serverless": "^1.78.27",
		"@types/serverless-jest-plugin": "^0.3.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"eslint-config-standard-with-typescript": "^20.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.0",
		"firebase-tools": "^9.10.2",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"nodemon": "^2.0.7",
		"prettier-config-standard": "^4.0.0",
		"serverless": "^2.41.2",
		"serverless-jest-plugin": "^0.3.0",
		"serverless-offline": "^7.0.0",
		"serverless-plugin-typescript": "^1.1.9",
		"ts-jest": "^26.5.6",
		"ts-node": "^9.1.1",
		"tslib": "^2.2.0",
		"typescript": "^4.2.4"
	},
	"prettier": "prettier-config-standard",
	"scripts": {
		"format": "prettier --write ./src && yarn lint --fix",
		"lint:src": "eslint -c ./.eslintrc src/",
		"lint:test": "eslint -c ./.eslintrc.test test/",
		"lint": "yarn lint:src && yarn lint:test",
		"build": "yarn run build:esm && yarn run build:cjs",
		"postbuild": "echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json && echo '{\"type\": \"module\"}' > ./dist/esm/package.json",
		"build:esm": "tsc",
		"build:cjs": "tsc --module CommonJS --outDir dist/cjs",
		"clean": "rm -rf dist/",
		"test": "FIREBASE_AUTH_EMULATOR_HOST=localhost:9099 FIRESTORE_EMULATOR_HOST=localhost:8080 jest --config jest.config.json",
		"dev": "nodemon",
		"dev:docker": "SERVER_PORT=3000 docker-compose up --build api",
		"start:esm": "GOOGLE_APPLICATION_CREDENTIALS='./service-account.json' node --experimental-specifier-resolution=node --experimental-json-modules -r dotenv/config ./dist/esm/index.js",
		"start:cjs": "GOOGLE_APPLICATION_CREDENTIALS='./service-account.json' node -r dotenv/config ./dist/cjs/index.js",
		"start": "yarn run start:esm",
		"dev:lambda": "sls offline start",
		"create:test": "sls create test -f app",
		"firebase:login": "firebase login",
		"firebase:init": "firebase init",
		"firebase:emulators": "firebase emulators:start",
		"repl": "node --experimental-specifier-resolution=node --experimental-repl-await --experimental-json-modules --loader ts-node/esm -r dotenv/config"
	}
}